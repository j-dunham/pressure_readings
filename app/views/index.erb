<%= erb :header %>
<nav class="navbar navbar-light bg-light">
  <div class="container-fluid justify-content-end">
    <ul class="navbar-nav">
      <li class="nav-item">
        <% if is_logged_in %>
          <a class="nav-link text-muted" href="/logout"><span class="material-icons">logout</span></a>
        <% else %>
          <a class="nav-link text-primary" href="/login"><span class="material-icons">login</span></a>
        <% end %>
      </li>
    </ul>
  </div>
</nav>
<br>
<body>
<h1><%= @message %></h1>
<span class="material-icons md-60">bloodtype</span>
<% if is_logged_in %>
  <div class="container">
    <div><a href="/list_readings"><span class="material-icons">table_view</span></a> View readings</div>
    <br>
    <div class="row">
      <div class="md-6">
        <label class="ml-5">Days for Summary:</label>
        <input name="days" hx-get="/reading_summary" hx-trigger="change,load" hx-target="#summary" type="number" value="5"/>
      </div>
    </div>
    <div class="row mt-5">
      <div id="summary"></div>
    </div>
<% end %>
</div>
</body>