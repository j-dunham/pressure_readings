<%= erb :header %>
<nav class="navbar navbar-expand-lg navbar-light">
  <div class="container-fluid">
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link text-success" href="/"><span class="material-icons">cabin</span></a>
      </li>
    </ul>
  </div>
</nav>
<body>
<div class="container">
  <h1>Add Reading</h1>
  <% if @message %>
    <p class="text-danger"><%= @message %></p>
  <% end %>
  <div class="row">
    <div class="md-6 d-flex justify-content-center">
      <form action="/pressure_reading" method="POST">
        <div class="mb-3">
          <label for="systolic" class="form-label">Systolic</label>
          <input type="number" class="form-control" id="systolic" name="systolic" aria-describedby="systolic">
        </div>
        <div class="mb-3">
          <label for="diastolic" class="form-label">Diastolic</label>
          <input type="number" class="form-control" name="diastolic" id="diastolic">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
</div>
</body>